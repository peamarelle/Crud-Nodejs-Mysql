<%- include('partials/_header'); -%>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </thead>
                <tbody>
                    <% if(data) { %>
                        <% data.forEach(element => { %>
                            <tr>
                                <td>
                                    <%= element.id %>
                                </td>
                                <td>
                                    <%= element.name %>
                                </td>
                                <td>
                                    <%= element.address %>
                                </td>
                                <td>
                                    <%= element.phone %>
                                </td>
                                <td>
                                    <a href="/delete/<% element.id %>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
               <div class="card-body">
                <form method="POST" action="/add">
                    <div class="form-goup">
                        <input type="text" name="name" placeholder="Name" class="form-control"> 
                    </div>
                    <div class="form-goup">
                        <input type="text" name="address" placeholder="Address" class="form-control"> 
                    </div>
                    <div class="form-goup">
                        <input type="text" name="phone" placeholder="Phone" class="form-control"> 
                    </div>
                    <button type="submit" class="btn btn-primary">Save Customer</button>
                </form>
               </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer'); -%>